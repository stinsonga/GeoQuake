<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/quake_list_padding">


    <TextView
        android:id="@+id/list_magnitude_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/quake_list_margin"
        android:gravity="center"
        android:textColor="@color/material_gray"
        android:textSize="@dimen/quake_list_mag_font_size"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/quake_list_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_700"
            android:textSize="@dimen/quake_list_font_size" />

        <TextView
            android:id="@+id/list_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=""
            android:textColor="@color/gray_700"
            android:textSize="@dimen/quake_list_font_size" />

    </LinearLayout>

</LinearLayout>