<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GeoQuakeTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:actionBarStyle">@style/ActionBarStyling</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:editTextColor">@color/gray_700</item>
        <item name="android:textColorHint">@color/gray_700</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/actionbar_color</item>
        <item name="tabIndicatorColor">@color/tab_select_color</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
        <item name="tabSelectedTextColor">#FFF</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ActionBarStyling" parent="Theme.AppCompat.DayNight">
        <item name="android:background">@color/actionbar_color</item>
    </style>

    <style name="ActionButtonOverflow" parent="Theme.AppCompat.DayNight">
        <item name="android:src">@drawable/ic_more_vert_white_24dp</item>
        <item name="android:right">8dp</item>
    </style>

    <dimen name="quake_list_mag_font_size">22sp</dimen>
    <dimen name="quake_list_font_size">15sp</dimen>
    <dimen name="quake_list_padding">16dp</dimen>
    <dimen name="quake_list_margin">16dp</dimen>

    <dimen name="bar_margin">16dp</dimen>
    <dimen name="about_padding">8dp</dimen>
</resources>